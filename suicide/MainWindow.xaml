<Window x:Class="suicide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:suicide"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="MainWindow" Height="450" Width="300"
        Background="Aquamarine">
    <Grid>
        <Label 
            x:Name="aktivni"
            BorderBrush="LightCyan"
            BorderThickness="1"
            Foreground="Black"
            Content=""
            HorizontalAlignment="Center" 
            Margin="0,25,0,0" 
            VerticalAlignment="Top" 
            Height="40" 
            Width="300"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"/>
        
        <Label 
            x:Name="pasivni"
            Content="Label" 
            HorizontalAlignment="Center" 
            Margin="0,70,0,0" 
            VerticalAlignment="Top"
            Width="92"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"/>

        <Button 
            Background="Cyan"
            Content="Button" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Click="Button_Click" 
            Height="46" 
            Width="92" 
            Margin="0,120,0,0"/>

        <Button 
            Content="+1" 
            HorizontalAlignment="Left" 
            Margin="21,217,0,0" 
            VerticalAlignment="Top" 
            Height="28" 
            Width="62"/>

        <Button 
            Content="+5" 
            HorizontalAlignment="Left" 
            Margin="21,307,0,0" 
            VerticalAlignment="Top" 
            Height="28" 
            Width="62"/>

        <Button 
            Content="+10" 
            HorizontalAlignment="Left" 
            Margin="203,217,0,0" 
            VerticalAlignment="Top" 
            Height="28"
            Width="62"/>


        <Button 
            Content="+20"   
            HorizontalAlignment="Left"     
            Margin="203,307,0,0"    
            VerticalAlignment="Top"    
            Height="28" 
            Width="62"/>
        
        <Button 
            Content="klikl + 1" 
            HorizontalAlignment="Center" 
            Margin="0,266,0,0" 
            VerticalAlignment="Top" 
            Height="28" 
            Width="62"/>


    </Grid>
